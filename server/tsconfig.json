{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": false,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],
    "module": "CommonJS",
    "target": "ES6",
    "allowJs": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "dist/*"]
}
